<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="login">
  <% if current_user %>
    <p class="welcome"><%= "Welcome, #{current_user.name}!!!!!!! :D =^..^=" %></p>
    <%= link_to 'Log Out', logout_path %>
  <% else %>
    <p class="login">
      <%= link_to 'Log in with your Twitter account', '/auth/twitter' %>
    </p>
  <% end %>
</div>
<%= yield %>

</body>
</html>
